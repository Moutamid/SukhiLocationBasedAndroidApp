<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sukhilocationbasedapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SukhiLocationBasedApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".MenuItemsActivity"
            android:exported="false"
            android:theme="@style/Theme.SukhiLocationBasedApp.NoActionBar"/>
        <activity
            android:name=".MainScreen"
            android:exported="false"
            android:theme="@style/Theme.SukhiLocationBasedApp.NoActionBar" />
        <activity
            android:name=".RequestRide"
            android:exported="false"
            android:theme="@style/Theme.SukhiLocationBasedApp.NoActionBar" />
        <activity
            android:name=".VerficationCode"
            android:exported="false"
            android:theme="@style/Theme.SukhiLocationBasedApp.NoActionBar" />
        <activity
            android:name=".AccountLoginScreen"
            android:exported="false"
            android:theme="@style/Theme.SukhiLocationBasedApp.NoActionBar" />
        <activity
            android:name=".walkthrough.WalkthroughScreens"
            android:exported="false"
            android:theme="@style/Theme.SukhiLocationBasedApp.NoActionBar" />
        <activity
            android:name=".WelcomeScreen"
            android:exported="true"
            android:theme="@style/Theme.SukhiLocationBasedApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:exported="false"
            android:theme="@style/Theme.SukhiLocationBasedApp.NoActionBar" />
    </application>

</manifest>